@model Order

    <form asp-action="Checkout" method="post" class="form-horizontal">
        <h4>You're just one step away from you delicious pies</h4>

        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="LastName"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="FirstName"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName " class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="AddressLine1"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="AddressLine1" />
                <span asp-validation-for="AddressLine1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="AddressLine2"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="AddressLine2" />
                <span asp-validation-for="AddressLine2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="ZipCode"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="ZipCode" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="City"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="State"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="State" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="Country"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="Country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="PhoneNumber"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="Email"></label>
            <div class="col-md-5">
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Complete Order" class="btn btn-primary" />
            </div>
        </div>


    </form>